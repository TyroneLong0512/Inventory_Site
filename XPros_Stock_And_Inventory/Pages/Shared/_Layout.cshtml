<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - XPros_Stock_And_Inventory</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/XPros_Stock_And_Inventory.styles.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body class="h-100">
    @if (User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3">
                <div class="container">
                    <a class="nav-link d-flex flex-row" asp-area="" asp-page="/Index"><img src="~/images/logo.png" /></a>
                    <button class="navbar-toggler text-primary" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="fa fa-bars"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-row-reverse justify-content-between">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>

        <nav class="navbar-primary">
            <div class="container">
                <div class="btn-expand-collapse"><span class="fa fa-angle-double-left"></span></div>
                <ul class="navbar-primary-menu">
                    <li>
                        <a asp-area="Identity" asp-page="/Account/Register"><span class="fa fa-users"></span><span class="nav-label"> Users</span></a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="main-content">
            @RenderBody()
        </div>
    }
    else
    {
        @RenderBody()
        ;
    }
    
    
    
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>