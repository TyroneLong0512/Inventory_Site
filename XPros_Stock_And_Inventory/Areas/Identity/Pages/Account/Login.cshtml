@page
@model LoginModel

<div class="container login vertical-center">
    <div class="card login">
        <img src="~/images/logo.png" class="card-img-top" />
        <div class="card-body">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input id="email" asp-for="Input.Email" type="email" class="form-control" autocomplete="username" aria-required="true" />
                    <label class="form-label" for="email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input id="password" asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label class="form-label " for="password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating center">
                    <button id="login-submit" type="submit" class="w-50 btn btn-lg btn-primary">Log in</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}